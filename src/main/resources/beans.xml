<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="location" value="classpath:application.properties" />
    </bean>

    <!-- Profile for filesystem usage -->
    <beans profile="filesystem">
        <bean id="reader" class="org.example.javahetic.FilesystemDataReader">
            <constructor-arg value="${file.path}"/>
        </bean>
    </beans>

    <!-- Profile for database usage -->
    <beans profile="database">
        <bean id="reader" class="org.example.javahetic.JdbcDataReader">
            <constructor-arg value="${database.url}"/>
            <constructor-arg value="${database.username}"/>
            <constructor-arg value="${database.password}"/>
        </bean>
    </beans>
</beans>
